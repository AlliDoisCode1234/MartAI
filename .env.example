# ============================================
# MartAI Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# === CONVEX BACKEND (REQUIRED) ===
NEXT_PUBLIC_CONVEX_URL=https://gregarious-lemming-409.convex.cloud
CONVEX_DEPLOYMENT=dev:gregarious-lemming-409
CONVEX_SITE_URL=http://localhost:3000

# === OPENAI API (REQUIRED for AI features) ===
OPENAI_API_KEY=

# Optional: Vercel AI Gateway (alternative to direct OpenAI)
# VERCEL_AI_GATEWAY_KEY=

# === AUTHENTICATION & SECURITY (REQUIRED for production) ===
# Generate these with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=
JWT_REFRESH_SECRET=
API_SECRET_KEY=
CSRF_SECRET=
API_KEY_HASH=

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# === RESEND EMAIL (REQUIRED for magic links) ===
# Get from: https://resend.com/api-keys
AUTH_RESEND_KEY=

# === CRON & SCHEDULED TASKS (REQUIRED for publishing) ===
CRON_SECRET=
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Vercel URL (auto-set in Vercel deployments)
# VERCEL_URL=

# === WORDPRESS INTEGRATION (OPTIONAL) ===
# Get these from: https://developer.wordpress.com
# WORDPRESS_CLIENT_ID=
# WORDPRESS_CLIENT_SECRET=
# WORDPRESS_REDIRECT_URI=http://localhost:3000/api/oauth/wordpress/callback

# === SHOPIFY INTEGRATION (OPTIONAL) ===
# Get these from: https://partners.shopify.com
# SHOPIFY_API_KEY=
# SHOPIFY_API_SECRET=
# SHOPIFY_REDIRECT_URI=http://localhost:3000/api/oauth/shopify/callback

# === GOOGLE ANALYTICS & SEARCH CONSOLE (OPTIONAL) ===
# Get these from: https://console.cloud.google.com
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/google/callback

# Google Service Account (alternative to OAuth)
# GOOGLE_SERVICE_ACCOUNT_EMAIL=
# GOOGLE_SERVICE_ACCOUNT_KEY=

# === ADMIN SEEDING (OPTIONAL - for initial setup) ===
# Used by scripts/seedAdmin.ts
# ADMIN_EMAIL=admin@martai.com
# ADMIN_PASSWORD=
# ADMIN_NAME=Admin User

# Demo Account (for scripts/seedDemoAccount.ts)
# DEMO_ADMIN_EMAIL=demo+admin@martai.com
# DEMO_ADMIN_PASSWORD=

# === POLAR BILLING (REQUIRED for production) ===
# Get these from: https://polar.sh
POLAR_ACCESS_TOKEN=
POLAR_WEBHOOK_SECRET=
POLAR_ORGANIZATION_ID=

# === DEVELOPMENT & TESTING ===
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000

# CI/CD (set by CI systems)
# CI=true

